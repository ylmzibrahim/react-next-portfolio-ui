{
  "name": "portfolio-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run open-browser && next dev",
    "open-browser": "open http://localhost:3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier src/**/*.js --write. --config ./.prettierrc"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "axios": "^0.27.2",
    "framer-motion": "^10.12.12",
    "next": "12.2.4",
    "next-cookie": "^2.8.0",
    "next-i18next": "^11.3.0",
    "next-themes": "^0.2.0",
    "node": "^20.4.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1",
    "reselect": "^4.1.6",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "eslint": "^8.32.0",
    "eslint-config-next": "12.2.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.16",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.1.8"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
